<div id="<%= dom_id gift_guide %>">
<div class="card-body">
  <p>
    <strong>Recipient:</strong>
    <%= gift_guide.recipient_name %>
  </p>

  <p>
    <strong>Gift:</strong>
    <%= gift_guide.gift_name %>
  </p>

  <p>
    <strong>Gift link:</strong>
    <%= link_to "Go to Store", gift_guide.gift_link %>
  </p>

  <p>
    <%= image_tag gift_guide.gift_image, alt: 'Gift Image', style: 'width: 20vw;' %>
  </p>
</div>
</div>
