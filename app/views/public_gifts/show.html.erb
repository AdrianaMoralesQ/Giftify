<p style="color: green"><%= notice %></p>

<%= render @public_gift %>

<div class='centered'>
  <%= link_to(edit_public_gift_path(@public_gift), class: 'btn') do %> 
    <%= image_tag 'edit.png', alt: 'Edit', height: '25' %>
  <% end %>
  <%= button_to(@public_gift, method: :delete, class: 'delete') do %>
   <%= image_tag 'delete.png', alt: 'Delete', height: '25' %>
  <% end %>
  <%= link_to "Back to public gifts", public_gifts_path, class: 'btn' %>

</div>
